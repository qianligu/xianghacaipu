<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jaxsen.xianghacaipu.ui.food.activity.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOrange">

        <ImageView
            android:id="@+id/detail_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/z_me_mypage_ico_back" />

        <ImageView
            android:id="@+id/detail_title_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/i_ad_more" />

        <ImageView
            android:id="@+id/detail_title_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/detail_title_more"
            android:src="@mipmap/z_z_topbar_ico_share" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/detail_title_share"
            android:background="@drawable/like_selector"
            android:button="@null"
            android:src="@mipmap/z_z_topbar_ico_share" />

    </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#e3dbab">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/i_ico_homepage_right_more"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="来自:美食秀"
                android:textColor="@color/colorGray" />

        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">


            <ImageView
                android:id="@+id/detail_info_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/detail_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/detail_info_img"
                android:text="昵称"
                android:textColor="#f00" />

            <TextView
                android:id="@+id/detail_info_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_info_name"
                android:layout_toRightOf="@id/detail_info_img"
                android:text="时间"
                android:textColor="@color/colorGray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/guanzhu_shap"
                android:drawableLeft="@mipmap/dish_follow_a"
                android:text="关注"
                android:textColor="@color/colorOrange"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detail_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_info_img"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/detail_info_img1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/detail_info_text"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/detail_info_img2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/detail_info_img1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/detail_info_img3"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/detail_info_img2"
                android:visibility="gone" />

        </RelativeLayout>
    </ScrollView>


</LinearLayout>

