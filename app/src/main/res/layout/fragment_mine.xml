<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jaxsen.xianghacaipu.ui.cook.fragment.CookFragment">

    <LinearLayout
        android:paddingTop="30px"
        android:id="@+id/layout_go_login"
        android:layout_width="match_parent"
        android:layout_height="420px"
        android:background="@color/colorOrange"
       android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginLeft="20px"
            android:src="@mipmap/z_me_head" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:drawableRight="@mipmap/z_myself_icon_go_white"
            android:gravity="center_vertical"
            android:text="请登录/注册"
            android:textColor="@color/colorWhite"
            android:textSize="50px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_margin="10px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="美食贴"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="菜谱"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@color/colorGray3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="20px"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/z_me_list_ico_collect"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="我的收藏"
                android:textSize="15sp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginRight="10dp"
                android:src="@mipmap/z_myself_ico_go" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="20px"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/z_me_list_ico_download"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="我的下载"
                android:textSize="15sp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginRight="10dp"
                android:src="@mipmap/z_myself_ico_go" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="20px"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/z_me_list_ico_see"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="浏览历史"
                android:textSize="15sp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginRight="10dp"
                android:src="@mipmap/z_myself_ico_go" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="20px"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/z_me_list_ico_integral"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="我的积分"
                android:textSize="15sp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginRight="10dp"
                android:src="@mipmap/z_myself_ico_go" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="20px"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/z_me_list_ico_order"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="我的订单"
                android:textSize="15sp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginRight="10dp"
                android:src="@mipmap/z_myself_ico_go" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@color/colorGray3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="30px"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="20px"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/z_me_list_ico_setting"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="系统设置"
            android:textSize="15sp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginRight="10dp"
            android:src="@mipmap/z_myself_ico_go" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50px"
        android:background="@color/colorGray3"
        android:gravity="center"
        android:text="版本号：5.1.6" />
</LinearLayout>
